{import ../pulsar/components/flash.latte}
{import ../pulsar/components/undraw.latte}
{import ../pulsar/components/alert.latte}
{import ../pulsar/components/avatar.latte}
{import ../pulsar/components/modal.latte}
{import ../pulsar/components/offcanvas.latte}
{import ../pulsar/components/peity.latte}
{import ../pulsar/components/toggle.latte}
{import ../pulsar/components/button.latte}

{import ../pulsar/forms/field.latte}
{import ../pulsar/forms/text.latte}
{import ../pulsar/forms/password.latte}
{import ../pulsar/forms/checkbox.latte}
{import ../pulsar/forms/pincode.latte}
{import ../pulsar/forms/icon-picker.latte}
{import ../pulsar/forms/textarea.latte}
{import ../pulsar/forms/select.latte}

{varType Pulsar\Account\Entities\User $user}
{varType ?Models\Account\Entities\Wallet $wallet}
{varType array $prices}

<!doctype html>
<!--
* Tabler - Premium and Open Source dashboard template with responsive and high quality UI.
* @version 1.4.0
* @link https://tabler.io
* Copyright 2018-2025 The Tabler Authors
* Copyright 2018-2025 codecalm.net PaweÅ‚ Kuna
* Licensed under MIT (https://github.com/tabler/tabler/blob/master/LICENSE)
-->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    {include components/favicon.latte}
    {block meta}{/block}
    <title>Code Quill</title>
    {include components/stylesheets.latte}
    {include components/javascripts.latte}
    {block css}{/block}
    <style>
        .logo-name {
            margin-left: 0.6rem;
            align-self: center;
            text-decoration: none;
            color: initial;
            font-size: 1rem;
        }
        .logo-typo:hover {
            text-decoration: none;
        }
        .logo-code {
            font-weight: 400;
            font-family: 'Source Sans Pro';
            letter-spacing: 4px;
        }

        .logo-quill {
            font-family: 'Source Sans Pro';
            letter-spacing: 1px;
        }
    </style>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/js/tabler.min.js"></script>
    <div class="page">
        <!-- BEGIN NAVBAR  -->

        <header class="navbar navbar-expand-md d-print-none" style="background: var(--tblr-gray-900); box-shadow: none;" data-bs-theme="dark">
            <div class="container-xl">
                <!-- BEGIN NAVBAR TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- END NAVBAR TOGGLER -->
                <!-- BEGIN NAVBAR LOGO -->
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                    <a href="." aria-label="Tabler" class="logo-typo d-flex align-items-center">
                        <img src="/assets/images/logo-black.png" alt="" style="height: 33px;" />
                        <div class="logo-name">
                            <div class="logo-code">CODE</div>
                            <div class="logo-quill">QUILL</div>
                        </div>
                    </a>
                </div>
                <!-- END NAVBAR LOGO -->
                <div class="navbar-nav flex-row order-md-last">
                    <div class="d-none d-md-flex">
                        <div class="nav-item d-none d-md-flex me-3">
                            <div class="btn-list">
                                <a href="https://github.com/ophelios-studio/codequill" class="btn btn-5" target="_blank" rel="noreferrer">
                                    <i class="bi bi-github icon"></i>
                                    Source code
                                </a>
                            </div>
                        </div>

                        <div class="d-flex">
                            <a href="#" class="nav-link px-1">
                                ETH: {format('money', $prices['eth'])}
                            </a>
                            <a href="#" class="nav-link px-1">
                                BOOE: {format('money', $prices['booe'])}
                            </a>
                        </div>

                        <div class="nav-item">
                            <a href="?theme=dark" class="nav-link px-0 hide-theme-dark" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Enable dark mode" data-bs-original-title="Enable dark mode">
                                <i class="icon-sm icon bi bi-moon"></i>
                            </a>
                            <a href="?theme=light" class="nav-link px-0 hide-theme-light" data-bs-toggle="tooltip" data-bs-placement="bottom" aria-label="Enable light mode" data-bs-original-title="Enable light mode">
                                <i class="icon-sm icon bi bi-sun"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ms-1 nav-item dropdown">
                        <a href="#" class="nav-link d-flex lh-1 p-0 px-2" data-bs-toggle="dropdown" aria-label="Open user menu">
                            {include "zf-avatar-image", "/assets/images/avatars/" . $user->avatar, [size: "sm"]}
                            <div class="d-none d-xl-block ps-2">
                                <div>{$user->fullname}</div>
                                <div n:if="$wallet" class="mt-1 small text-secondary"><span class="status-dot status-green me-1"></span>{$wallet->getName()}</div>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow" data-bs-theme="light">
                            <a href="#" class="dropdown-item">Status</a>
                            <a href="/app/profile" class="dropdown-item">Profile</a>
                            <a href="#" class="dropdown-item">Etherscan</a>
                            <div class="dropdown-divider"></div>
                            <a href="/app/profile" class="dropdown-item">Settings</a>
                            <a href="/logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                </div>
                <div class="collapse navbar-collapse" id="navbar-menu">
                    <!-- BEGIN NAVBAR MENU -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/app/repositories">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="icon bi bi-git"></i>
                                </span>
                                <span class="nav-link-title">Repositories</span>
                            </a>
                        </li>
                    </ul>
                    <!-- END NAVBAR MENU -->
                </div>
            </div>
        </header>
        <div class="page-wrapper">
            {block content}{/block}
            <!--  BEGIN FOOTER  -->
            <footer class="footer footer-transparent d-print-none">
                <div class="container-xl">
                    <div class="row text-center align-items-center flex-row-reverse">
                        <div class="col-lg-auto ms-lg-auto">
                            <ul class="list-inline list-inline-dots mb-0">
                                <li class="list-inline-item"><a href="https://docs.tabler.io" target="_blank" class="link-secondary" rel="noopener">Documentation</a></li>
                                <li class="list-inline-item"><a href="./license.html" class="link-secondary">License</a></li>
                                <li class="list-inline-item">
                                    <a href="https://github.com/tabler/tabler" target="_blank" class="link-secondary" rel="noopener">Source code</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="https://github.com/sponsors/codecalm" target="_blank" class="link-secondary" rel="noopener">
                                        <!-- Download SVG icon from http://tabler.io/icons/icon/heart -->
                                        <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="icon text-pink icon-inline icon-4"
                                        >
                                            <path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572" />
                                        </svg>
                                        Sponsor
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                            <ul class="list-inline list-inline-dots mb-0">
                                <li class="list-inline-item">
                                    Copyright &copy; 2025
                                    <a href="." class="link-secondary">Tabler</a>. All rights reserved.
                                </li>
                                <li class="list-inline-item">
                                    <a href="./changelog.html" class="link-secondary" rel="noopener"> v1.4.0 </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
            <!--  END FOOTER  -->
        </div>
    </div>
    {block modals}{/block}
    <script nonce="{nonce()}" type="module">
        import WalletConnect from '/javascripts/modules/WalletConnect.js';
        document.addEventListener('DOMContentLoaded', () => {
            const walletConnect = new WalletConnect();
        });
    </script>
    {block js}{/block}
</body>
</html>